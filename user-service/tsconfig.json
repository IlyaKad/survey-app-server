{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "typeRoots": [
      "./node_modules/@types",
      "./src/types.d.ts"
    ]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
